<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pako.calculadoratacos.MainActivity">


    <Button
        android:id="@+id/btn_ir_productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:text="Productos" />

    <ImageButton
        android:id="@+id/img_btn_hablar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/microfono"
        android:contentDescription="@string/app_name"
        android:elevation="0dp"
        android:onClick="onClickImgBtnHablar" />

    <TextView
        android:id="@+id/txtGrabarVoz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-medium"
        android:phoneNumber="false"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

    <TextView
        android:text="Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/img_btn_hablar"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_ir_reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ir_productos"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_ir_productos"
        android:text="Reporte" />

    <Button
        android:id="@+id/btn_ir_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Pagar" />

    <Spinner
        android:id="@+id/combo_mesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGrabarVoz"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

</RelativeLayout>
