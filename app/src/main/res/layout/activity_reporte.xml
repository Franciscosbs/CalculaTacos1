<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reporte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pako.calculadoratacos.activity_reporte">


    <Spinner
        android:id="@+id/combo_mesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:id="@+id/texto_fecha_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/combo_mesas"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/texto_fecha_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/texto_fecha_inicio"
        android:layout_alignRight="@+id/texto_fecha_inicio"
        android:layout_below="@+id/texto_fecha_inicio"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/btn_fecha_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/texto_fecha_inicio"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/texto_fecha_inicio"
        android:layout_toStartOf="@+id/texto_fecha_inicio"
        android:text="@string/de" />

    <Button
        android:id="@+id/btn_fecha_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/texto_fecha_fin"
        android:layout_alignLeft="@+id/btn_fecha_inicio"
        android:layout_alignStart="@+id/btn_fecha_inicio"
        android:text="@string/a" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texto_fecha_fin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

</RelativeLayout>
