<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pako.calculadoratacos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.vista.Productos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.vista.AgregarProducto"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.vista.EliminarProducto"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.vista.ActualizarProducto"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tesislia.pako.calculadoratacos.activity_pago"
            android:label="@string/title_activity_pago"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".activity_pago" />
        <activity android:name=".activity_reporte"></activity>
    </application>

</manifest>